<div class="loading-spinner" style="@(NotLoading ? "display: none" : "display: block");">
    <div class="spinner-border" role="status">
        <span class="visually-hidden">@LoadingText</span>
    </div>
</div>

@code {
    [Parameter]
    public bool NotLoading { get; set; }

    [Parameter]
    public string LoadingText { get; set; } = "...";

    [Parameter]
    public string Class { get; set; } = "loading-spinner";

    [Parameter]
    public string BorderClass { get; set; } = "spinner-border";
}